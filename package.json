{
  "name": "@giveth/blockchain-integration-service",
  "version": "1.0.0",
  "description": "Blockchain integration service for transaction verification and multi-chain support",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "NODE_ENV=test mocha --require ts-node/register 'src/tests/**/*.test.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prettify": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solana",
    "stellar",
    "cardano",
    "transaction-verification",
    "web3",
    "crypto"
  ],
  "author": "Giveth",
  "license": "MIT",
  "dependencies": {
    "@blockfrost/blockfrost-js": "^6.0.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^15.0.0",
    "@safe-global/api-kit": "^2.0.0",
    "@solana/web3.js": "^1.87.7",
    "@stellar/stellar-sdk": "^12.2.0",
    "axios": "^1.6.7",
    "axios-retry": "^3.9.1",
    "dotenv": "^8.2.0",
    "ethers": "^5.7.2",
    "joi": "^17.12.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "chai": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.14.2"
  }
}

